<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Sign in</title>
  </head>
  <body>
    <h1>Sign In</h1>
    <form class="" action="/signin" method="post">
      Email: <input type="email" name="email" id="email" value=""><p>
      Password: <input type="password" name="password" value=""><p>
      <input type="checkbox" name="rememberme" value="R" id="rememberme">
      <label for="rememberme">Remember Me</label><p>
      <button type="submit" name="button">Sign In</button>
    </form>
  </body>
  <script src="/js/jquery.min.js" charset="utf-8"></script>
  <script src="/js/jquery.validate.js" charset="utf-8"></script>
  <script type="text/javascript">
  $(function(){
    <% if (messages.warning) {%>
          alert('<%=messages.warning%>');
    <%}%>

    <% if(email) {%>
      $('#rememberme').prop('checked', true);
      $('#email').val("<%=email%>");
      $('#password').focus();
    <%}%>
  })


  </script>
</html>
